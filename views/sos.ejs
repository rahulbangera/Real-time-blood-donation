    <form>

    <div class="others">
        <div class="popupContainer">
            <div class="left-side">
                <div class="headContent">
                    <h1>Emergency Blood Request</h1>
                </div>
                <div class="leftMainContent">
                    <p>Fill in the details below to request blood (Emergency) </p>
                    <label for="name">Your Name:</label>
                    <input type="text" placeholder="Your Name" name="name" id="name" required>
                    <label for="mobile">Mobile Number: </label>
                    <div class="mobile-verify">
                        <input type="mobile" style="width: 70%;" placeholder="Your Phone" name="mobile" id="mobile" pattern="\d{10}" required>
                        <!-- <button type="button" class="verify" id="verify">Verify</button> -->
                    </div>
                    <label for="bloodGroup">Blood Group: </label>
                    <select name="bloodGroup" id="bloodGroup" required>
                        <option value="" disabled selected>Select your blood group</option>
                        <option value="A+">A+</option>
                        <option value="A-">A-</option>
                        <option value="B+">B+</option>
                        <option value="B-">B-</option>
                        <option value="O+">O+</option>
                        <option value="O-">O-</option>
                        <option value="AB+">AB+</option>
                        <option value="AB-">AB-</option>
                    </select>
                </div>
            </div>
    
            <div class="right-side">
                <div class="headContent">
                    <h1>Select the Hospital</h1>
                </div>
                <div class="rightMainContent">
                    <label for="hospital">Hospital Name:</label>
                    <input type="text" placeholder="Type Hospital name to select" name="hospital" id="hospital">
                    <div class="mapContainer" id="map"></div>
                    <button id="submitRequest">Submit Request</button>
                </div>
            </div>
        </div>
    </div>
    
    <div class="overlay" id="popupOverlay">
        <div class="popup-box">
          <h2 id="overlayHead">Confirm Request</h2>
          <div style="text-align: center;" id="extraFiller"></div>
          <div id="verifyCaptcha"></div>
          <p id="overlayInfo">Are you sure you want to select <strong id="hospitalName"></strong>?</p>
          <div class="verifyBox"></div>
          <div class="buttons">
            <button class="confirm-btn" id="confirmBtn">Confirm</button>
            <button class="cancel-btn" id="cancelBtn">Cancel</button>
          </div>
         
        </div>
      </div>
    </form>

    <div id="loadingOverlay" class="loading-overlay">
        <div class="loadContainer">
            <div class="spinner"></div>
            <!-- Getting all the donors in one place... -->
             <div class="qod" id="qod"></div>
        </div>
        
    </div>

